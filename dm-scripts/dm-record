#!/usr/bin/env bash
# Tracking process
proc="/tmp/dm-record"

prompt="Record"
options=(
    "Monitor"
    "Area"
    "Window"
    "Desktop"
    "Camera"
    "Audio"
)

start_recording() {
    scope="$1"
    case "$scope" in
        "Monitor") ~/.local/bin/record-screen.sh monitor ;;
        "Area") ~/.local/bin/record-screen.sh area ;;
        "Window") ~/.local/bin/record-screen.sh window ;;
        "Desktop") ~/.local/bin/record-screen.sh desktop ;;
        "Camera") echo camera;; # TODO
        "Audio") echo audio_capture;; # REVIEW
        *) echo Invalid input;;
    esac & echo $! > "$proc"
}

stop_recording() {
    pid="$(cat $proc)"

    # kill with SIGTERM, allowing finishing touches.
    kill -15 "$pid"
    rm -f "$proc"

    # even after SIGTERM, ffmpeg may still run, so SIGKILL it.
    sleep 3
    kill -9 "$pid"
    exit
}

audio_capture() {
    ffmpeg \
        -f pulse -ac 2 -i $audio_device \
        -codec:a copy \
        $record_dir/dm-$(date $timestamp).wav &
    echo $! > $proc
}

if [ -f $proc ]; then
    if [ $(~/.local/bin/trigger-confirmation.sh "Stop recording?") = "Yes" ]; then
        stop_recording
    else
        exit
    fi

elif [ ! $# -eq 0 ]; then
    start_recording $1

else
    # Prompt the user
    choice=$(printf '%s\n' "${options[@]}" | rofi -dmenu -i -p "${prompt}")

    # Act on user selection
    [ $choice ] && start_recording $choice
fi
